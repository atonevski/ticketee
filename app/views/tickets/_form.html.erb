<%= form_for [@project, @ticket] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, :placeholder => 'Just a place holder' %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, :placeholder => 'Placeholder for text area...' %> 
  </p>
  <%= f.submit %>
<% end %>
